<!DOCTYPE  HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en" [COLOR="Red"]viewsource="no"[/COLOR]>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
    <title><%= courseDet.Name %> </title>
    <style>
    body,h1,h2,h3,h4,h5,h6 {font-family: "Karma", sans-serif}
    .w3-bar-block .w3-bar-item {padding:20px}
    </style>
    </head>
    <body>
    <% if (studentCSR.Verified==true) { %>    
          <!-- Top menu -->
          <div class="w3-top">
            <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
              <div class=" w3-padding-16 w3-left" onclick="w3_open()">
                <img  src="<%= user.imgUrl %>" alt="<%= user.Fname %>" width="90px" height="90px" style="border-radius: 100px; cursor: pointer;"></div>
              <div class="w3-right w3-padding-16"> <a href="/logout">Logout ||</a></p></div>
              <div class="w3-right w3-padding-16"> <a href="#videos">Videos ||</a></p></div>
              <div class="w3-right w3-padding-16"> <a href="#notes">Notes ||</a></p></div>
              <div class="w3-center w3-padding-16"><h3><b><%= user.Fname %> <%= user.Lname %></b></h3></div>
            </div>
          </div>


        </header>

        <section style="padding:150px;" id="videos">
            <h1><u>Videos</u></h1>
            <% if (allVideo.length>0) { %>
                <% allVideo.forEach(vid => { %>
                 <article>
                    <video width="320" height="240" controls>
                        <source src="<%= vid.Video %>" type="video/mp4">
                    </video>
                    <caption><%= vid.Name %></caption>
                 </article>
                <% }) %>
            <% } else { %>
             <center><h3>No video Available</h3></center>
            <% } %>
            
        </section >

        <section style="padding:150px;" id="notes">
            <h1><u>Notes</u></h1>
            <% if (allnotes.length>0) { %>
                <% allnotes.forEach(vid => { %>
                 <article>
                    <p><%= vid.Name  %> </p>
                    <a href="<%= vid.Note %> ">Download</a>
                </article>
                <% }) %>
            <% } else { %>
             <center><h3>No Notes Available</h3></center>
            <% } %>
            
        </section>
    <% } else { %>
     <center>
        <h2>Good day <%= user.Fname %> <%= user.Lname %>, your course is being proccessed</h2>
     </center>
    <% } %>
    

    
</body>
</html>