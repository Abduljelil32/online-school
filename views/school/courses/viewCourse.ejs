    <!--Container-->
    <div class="container w-full px-2 mx-auto md:w-4/5 xl:w-3/5">
      
      <!--Title-->
      <h1
        class="flex items-center px-2 py-8 font-sans text-xl font-bold text-red-500 break-normal md:text-2xl"
      >
        Courses Details
      </h1>
      <!--Card-->
      <div id="recipients" class="p-8 mt-6 bg-white rounded shadow lg:mt-0">
        <table
          id="example"
          class="stripe hover"
          style="width: 100%; padding-top: 1em; padding-bottom: 1em"
        >
          <thead>
            <tr>
              <th data-priority="1">Course Name</th>
              <th data-priority="2">Course Code</th>
              <th data-priority="3">Course Price</th>
              <th data-priority="4">Actions</th>
            </tr>
          </thead>
          <% let a = Math.floor(Math.random() * 1000000) + 1 %>
          <tbody>
            <tr>
              <td><%= course.Name %></td>
              <td><%= course.CourseCode %></td>
              <td><%= course.Price %></td>
              <td>
                <a href="/addNote/<%= a %>">Add Note ||</a>
                <a href="/addVideo" style="color: blue">
                  Add Video <span style="color: black">||</span></a
                >
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <!--/Card-->
    </div>
    <!--/container-->

    <!--Container 2-->
    <div class="container w-full px-2 mx-auto md:w-4/5 xl:w-3/5">
      <!--Title-->
      <h1
        class="flex items-center px-2 py-8 font-sans text-xl font-bold text-red-500 break-normal md:text-2xl"
      >
        Students registered under this course
      </h1>

      <!--Card-->
      <div id="recipients" class="p-8 mt-6 bg-white rounded shadow lg:mt-0">
        <% if (data == 'undefined' || data == null) { %>
        <p>There are no Registered Students for this Course</p>
        <% } else if (data.length > 0) { %>
        <table
          id="example"
          class="stripe hover"
          style="width: 100%; padding-top: 1em; padding-bottom: 1em"
        >
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Phone Number</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(Detail => { %>
            <tr>
              <td><%= Detail.Fname %></td>
              <td><%= Detail.Lname %></td>
              <td><%= Detail.PhnNo %></td>
              <td>
                <a href="/student/<%= Detail._id %>">View</a>
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>
        <% } else { %>
            <p>There are no Registered Students for this Course</p>
            <% } %>
      </div>
      <!--/Card-->
    </div>
    <!--/container-->


     <!--Container 2-->
     <div class="container w-full px-2 mx-auto md:w-4/5 xl:w-3/5">
        <!--Title-->
        <h1
          class="flex items-center px-2 py-8 font-sans text-xl font-bold text-red-500 break-normal md:text-2xl"
        >
         Notes
        </h1>
  
        <!--Card-->
        <div id="recipients" class="p-8 mt-6 bg-white rounded shadow lg:mt-0">
            <div class="bookDiv">
              <% if (notes.length > 0) { %> <% notes.forEach(note => { %>
              <div class="book">
                <% if (note.crsID == 0) { %>
                <p>There are no Notes for This Course</p>
                <% } else if (note.crsID == course._id){ %>
                <h4 style="padding-top: 10px; font-weight: bold;"><%= note.Name %></h4>
                <div
                  style="
                    width: 100%;
                    height: 70%;
                    border-top-left-radius: 10%;
                    border-top-right-radius: 10%;
                    display: inline-block;
                    position: relative;
                    transition: 0.3s;
                  "
                  class="card-body"
                  id="blur-in"
                >
                  <img
                    src="<%= note.Cover %>"
                    alt="<%= note.Name %>"
                    width="300px"
                    height="100%"
                  />
                  <a href="<%= note.Note %>" blank="false" style="color: blue;">View Note <span style="color: black;">||</span></a>
                  <a href="/deleteNote/<%= note._id %>" style="color: red;">Delete</a>
                </div>
                
                <% } %>
              </div>
              <% }) %> <% } else { %>
              <p>There is no Note</p>
              <% } %>
            </div>
        </div>
        <!--/Card-->
      </div>
      <!--/container-->










     <!--Container 2-->
     <div class="container w-full px-2 mx-auto md:w-4/5 xl:w-3/5">
        <!--Title-->
        <h1
          class="flex items-center px-2 py-8 font-sans text-xl font-bold text-red-500 break-normal md:text-2xl"
        >
         Videos
        </h1>
  
        <!--Card-->
        <div id="recipients" class="p-8 mt-6 bg-white rounded shadow lg:mt-0">
            <div class="videoDiv">
              <% if (videos.length > 0) { %> <% videos.forEach(video => { %>
              <div class="video">
                <% if (video.crsID == 0) { %>
                <p>There are no Videos for This Course</p>
                <% } else if (video.crsID == course._id) { %>
                <h4 style="padding-top: 10px; font-weight: bold;"><%= video.Name %></h4>
                <div
                  style="
                    width: 100%;
                    height: 70%;
                    border-top-left-radius: 10%;
                    border-top-right-radius: 10%;
                  "
                >
                  <video width="300px" height="100%" controls id="video">
                    <source
                      src="<%= video.Video %>"
                      type="video/mp4"
                      style="width: 100%; height: 100%; object-fit: cover"
                    />
                  </video>
                </div>
                <a href="/deleteVideo/<%= video._id %>" style="color: red;">Delete</a>
                <% } %>
              </div>
              <% }) %> <% } else { %>
              <p>There is no Video</p>
              <% } %>
            </div>
          </div>
        <!--/Card-->
      </div>
      <!--/container-->




    

    <!-- jQuery -->
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-3.4.1.min.js"
    ></script>

    <!--Datatables -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script>
      $(document).ready(function () {
        var table = $("#example")
          .DataTable({
            responsive: true,
          })
          .columns.adjust()
          .responsive.recalc();
      });
    </script>
  </body>
</html>
