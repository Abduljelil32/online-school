    <!--===============================================================================================-->
    <style>
      .overlay {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        transition: opacity 500ms;
        visibility: hidden;
        opacity: 0;
      }
      .overlay:target {
        visibility: visible;
        opacity: 1;
      }

      .popup {
        margin: 70px auto;
        padding: 20px;
        background: #fff;
        border-radius: 5px;
        width: 30%;
        position: relative;
        transition: all 5s ease-in-out;
      }

      .popup h2 {
        margin-top: 0;
        color: #333;
        font-family: Tahoma, Arial, sans-serif;
      }
      .popup .close {
        position: absolute;
        top: 20px;
        right: 30px;
        transition: all 200ms;
        font-size: 30px;
        font-weight: bold;
        text-decoration: none;
        color: #333;
      }
      .popup .close:hover {
        color: #06d85f;
      }
      .popup .content {
        max-height: 30%;
        overflow: auto;
      }
    </style>
  </head>
  <body>
    <div class="flex items-center justify-center min-h-screen p-6 bg-gray-100">
      <div class="container max-w-screen-lg mx-auto">
        <div>
         
    
          <div class="p-4 px-4 mb-6 bg-white rounded shadow-lg md:p-8">
            <div class="grid grid-cols-1 gap-4 text-sm gap-y-2 lg:grid-cols-3">
              <div class="text-gray-600">
                <button onclick="history.back()" style="padding: 10px">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="30"
                    height="30"
                    fill="currentColor"
                    class="bi bi-arrow-left"
                    viewBox="0 0 16 16"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"
                    />
                  </svg>
                </button>
                <p class="mt-10 text-lg font-medium text-center">Add Note</p>
              </div>
             
               
          
              <div class="lg:col-span-2">
                <p style="text-align: center; color: rgb(190, 33, 33);"><%= msg %> </p>
                <form action="/addNote/<%= bam %>" method="post" enctype="multipart/form-data">             
                  <a href="#popup1/<%= bam %>" class="txt3">Add Cover</a>
                <div class="grid grid-cols-1 gap-4 text-sm gap-y-2 md:grid-cols-5">
                  <div class="md:col-span-5">
                    <% if (courses.length > 0) { %>
                    <label for="course">Choose a Course</label>
                    <select  name="crsID"
                    id="crsID" class="w-full h-10 px-4 mt-1 border rounded bg-gray-50">
                      
                    <option>Choose a Course</option>
                    <% courses.forEach(course => { %>
                      
                      <option value="<%= course._id %>"><%= course.Name %></option>
                      <% }) %>
                    </select>
                    <% } else { %>
                      <select name="crsID" id="crsID">
                        <option value="" disabled>No Available Course</option>
                      </select>
                      <% } %>
                  </div>
                  <div class="md:col-span-5">
                   
                    <label for="lastname"></label>
                    <input   type="text"
                    name="Name"
                    id="Name"
                    placeholder="Note Title"
                     class="w-full h-10 px-4 mt-1 border rounded bg-gray-50" />
                  </div>
    
                  <div class="md:col-span-2">
                    <label for="file">Choose File</label>
                    <input type="file" name="Note" id="" class="w-full h-10 px-4 mt-1 border rounded bg-gray-50" accept="application/pdf" />
                  </div>
                  <div class="text-right md:col-span-5">
                    <div class="inline-flex items-end">
                      <button class="px-4 py-2 font-bold text-white bg-red-500 rounded hover:bg-red-700">   <input type="submit" value="Add Note" /></button>
                    </div>
                  </div>
                </div>
                </form>
              </div>
              <div id="popup1/<%= bam %>" class="overlay">
                <div class="popup">
                  <h2>Add Note Cover</h2>
                  <a class="close" href="">&times;</a>
                  <div class="content">
                    <form
                      action="/addNote/Cover/<%= bam %>"
                      method="POST"
                      enctype="multipart/form-data"
                    >
                      <label for="Cover">Note Cover </label>
                      <input type="file" name="Cover" id="Note" accept="images/*" />
                      <br />
                      <br />
                      <input type="submit" value="Add Cover" />
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    
       
      </div>
    </div>
  

  
